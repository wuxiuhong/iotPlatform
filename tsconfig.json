{
  "include": [
    "src/**/*",
    "node_modules/vue-tsx-support/enable-check.d.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "jsx": "preserve",
    "jsxFactory": "h",
    "allowJs": true,
    "module": "es6",
    "target": "es6",
    "moduleResolution": "node",
    "isolatedModules": true,
    "lib": [
      "dom",
      "es2017"
    ],
    "sourceMap": true,
    "pretty": true
  }
}